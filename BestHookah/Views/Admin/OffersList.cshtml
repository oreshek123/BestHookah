                <p class="h3">
                    @Html.ActionLink("Create New", "CreateOffer")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FinishDate)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FinishDate)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditOffer", new { id = item.OfferId }) |
                                @Html.ActionLink("Details", "DetailsOffer", new { id = item.OfferId }) |
                                @Html.ActionLink("Delete", "DeleteOffer", new { id = item.OfferId })
                            </td>
                        </tr>
                    }

                </table>
